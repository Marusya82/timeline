<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
      <item name="colorPrimary">@color/colorPrimary</item>
      <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
      <item name="colorAccent">@color/colorAccent</item>
      <item name="android:windowBackground">@color/extra_extra_light_gray</item>
      <item name="windowActionBar">false</item>
      <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme.AppCompat.Light.NoActionBar -->
    <!-- @android:style/Theme.Black.NoTitleBar.Fullscreen -->
    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- minSdkVersion 19 -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/colorPrimaryLogin</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLoginDark</item>
        <!-- text -->
        <item name="colorAccent">@color/white</item>
        <!-- login_button.xml -->
        <item name="loginButton">@color/whiteTransparent</item>
        <!-- background -->
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="BoldPrimaryText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="fontPath">fonts/HelveticaNeue-Bold.ttf</item>
        <item name="android:textSize">@dimen/mediumText</item>
    </style>

    <style name="InfoText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="HeaderText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/largeText</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="fontPath">fonts/HelveticaNeue-Bold.ttf</item>
    </style>

    <style name="DescriptionText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_margin</item>
    </style>

    <style name="StoryTitleText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/largeText</item>
        <item name="fontPath">fonts/HelveticaNeue-Bold.ttf</item>
    </style>

    <style name="StoryAuthorText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/mediumText</item>
    </style>

    <style name="MomentCountText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/HelveticaNeue-Bold.ttf</item>
        <item name="android:textSize">@dimen/mediumText</item>
    </style>

    <style name="CollaboratorCountText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">@dimen/user_default_height</item>
        <item name="android:layout_height">@dimen/user_default_height</item>
        <item name="android:background">@drawable/circle_light_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="fontPath">fonts/HelveticaNeue-Bold.ttf</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/mediumText</item>
        <item name="android:textColor">@color/extra_light_gray</item>
        <item name="fontPath">fonts/HelveticaNeue-Bold.ttf</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- Timeline moment styles -->
    <style name="TimelineVerticalLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TimelineCircularDate" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginLeft">@dimen/large_margin</item>
        <item name="android:layout_marginRight">@dimen/extra_large_margin</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/HelveticaNeue-Bold.ttf</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">-5</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <!-- Spotify -->
    <style name="SpoptifyThemeTransparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Spotify -->
    <!-- @android:style/Theme.Holo -->
    <style name="SpoptifyTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="dialogTheme">@style/CustomDialogTheme</item>
        <item name="alertDialogTheme">@style/CustomDialogTheme</item>
    </style>

    <!-- @android:style/Theme.Holo.Dialog -->
    <!-- @android:color/transparent -->
    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:textColorPrimary">@color/red</item>
        <item name="android:textColorSecondary">@color/red</item>
        <item name="android:textColorTertiary">@color/red</item>
        <item name="android:textColorPrimaryInverse">@color/red</item>
        <item name="android:textColorSecondaryInverse">@color/red</item>
        <item name="android:textColorTertiaryInverse">@color/red</item>
        <item name="android:textColorPrimaryDisableOnly">@color/red</item>
        <item name="android:textColorPrimaryInverseDisableOnly">@color/red</item>
        <item name="android:textColorPrimaryNoDisable">@color/red</item>
        <item name="android:textColorSecondaryNoDisable">@color/red</item>
        <item name="android:textColorPrimaryInverseNoDisable">@color/red</item>
        <item name="android:textColorSecondaryInverseNoDisable">@color/red</item>
        <item name="android:textColorHint">@color/red</item>
        <item name="android:textColorHintInverse">@color/red</item>
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:windowBackground">@color/red</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:alertDialogStyle">@style/SpoptifyAlertDialogStyle</item>
    </style>

    <style name="SpoptifyAlertDialogStyle">
        <item name="android:bottomBright">@color/red</item>
        <item name="android:bottomDark">@color/red</item>
        <item name="android:bottomMedium">@color/red</item>
        <item name="android:centerBright">@color/red</item>
        <item name="android:centerDark">@color/red</item>
        <item name="android:centerMedium">@color/red</item>
        <item name="android:fullBright">@color/red</item>
        <item name="android:fullDark">@color/red</item>
        <item name="android:topBright">@color/red</item>
        <item name="android:topDark">@color/red</item>
    </style>
</resources>
